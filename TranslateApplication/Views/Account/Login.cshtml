@model TranslateApplication.Models.LoginModel

<h3 class="col-md-3">Вход на сайт</h3>

<a class="col-md-3" asp-action="Register" asp-controller="Account" >Регистрация</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="form-group col-md-3">
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" placeholder="Введите Email" class="form-control" />
        <span asp-validation-for="Email" />
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Password">Введите пароль</label>
        <input asp-for="Password" class="form-control" placeholder="Пароль"/>
        <span asp-validation-for="Password" />
    </div>
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group col-md-3">
        <input type="submit" value="Войти" class="btn btn-primary" />
    </div>
</form>