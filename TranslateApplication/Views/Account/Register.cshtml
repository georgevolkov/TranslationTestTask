@model TranslateApplication.Models.RegisterModel

<h2 class="col-md-3">Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group col-md-3">
        <div>
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" class="form-control" placeholder="E-mail"/>
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" class="form-control" placeholder="Пароль"/>
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтверждение пароля"/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <br/>
        <div>
            <input type="submit" value="Регистрация" class="btn btn-primary"/>
        </div>
    </div>
</form>